{{> admin_nav}}
{{> admin_left_menu}}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  {{> admin_page_header}}

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          홍보차 리스트
          <a href="#" class="btn btn-success pull-right" data-toggle="modal" data-target="#carModifyModal">홍보차 등록</a>
        </div>
        <div class="panel-body">
          <table class="table table-car-pr">
            <thead>
            <tr>
              <th data-field="image" data-align="center">Image</th>
              <th data-field="company" data-align="center">Company</th>
              <th data-field="name" data-align="center">Model</th>
              <th data-field="price" data-align="right">Price</th>
              <th data-field="status" data-align="center">Status</th>
              <th data-field="action" data-align="center">Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
              <tr>
                <td><img src="{{thumbnail}}" alt="{{name}}" width="200" height="100" /></td>
                <td>{{company}}</td>
                <td>{{name}}</td>
                <td>{{min_price}} ~ {{max_price}}</td>
                <td>
                  {{#if (isEquals status 0)}} <span class="text-danger">미홍보중</span>{{else}}<span class="text-success">홍보중</span>{{/if}}
                </td>
                <td>
                  {{#if (isEquals status 0)}}
                    <a href="/admin/pr/activate/{{id}}/{{status}}" class="btn btn-success">active</a>
                  {{else}}
                    <a href="/admin/pr/activate/{{id}}/{{status}}" class="btn btn-warning">in-active</a>
                  {{/if}}
                  <a href="#" class="btn btn-danger">Modify</a>
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div><!--/.row-->
</div>	<!--/.main-->

<!-- modal(register pr car ) -->
<div class="modal fade" id="carModifyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="" method="post">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">홍보차 등록</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Company</label>
            <input class="form-control" placeholder="회사이름을 입력하세요." required autofocus />
          </div>
          <div class="form-group">
            <label>Model</label>
            <input class="form-control" placeholder="차량 모델명을 입력하세요." required />
          </div>
          <div class="form-group">
            <label>Thumbnail</label>
            <input type="file" name="file" required />
            <p class="help-block">*대표 이미지를 등록하세요. (권장사이즈: ?? 이미지형식: ??)</p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- // modal -->