{{> admin_nav}}
{{> admin_left_menu}}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  {{> admin_page_header}}
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">{{title}}</div>
        <div class="panel-body">
          <form role="form" action="/admin/result/dealer" method="post">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="이름" name="name" type="text" autofocus required />
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="핸드폰번호" name="tel" type="text" required />
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="이메일" name="email" type="email" required />
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="비밀번호" name="password" type="password" minlength="8" maxlength="100" required />
              </div>
              <button type="submit" class="btn btn-primary">생성</button>
            </fieldset>
          </form>
        </div>
      </div>
    </div><!-- /.col-->
  </div><!-- /.row -->

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          딜러 목록
          <a href="#" class="btn btn-success pull-right">딜러생성</a>
        </div>
        <div class="panel-body">
          <table class="table">
            <thead>
            <tr>
              <th data-field="id" data-align="center">ID</th>
              <th data-field="name" data-align="center">Name</th>
              <th data-field="tel" data-align="center">Tel.</th>
              <th data-field="email" data-align="center">Email</th>
              <th data-field="action" data-align="center">Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
              <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{tel}}</td>
                <td>{{email}}</td>
                <td>
                  <a href="#" class="btn btn-warning">정보수정</a>
                  <a href="#" class="btn btn-danger">권한정지</a>
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div><!--/.row-->
</div>	<!--/.main-->